<div class="container new-form">
  <p><%= @user.description %></p>
</div>
<div class="container">
  <% @user.homes.each do |home| %>
    <div class="col-md-4">
<div class="card">
  <div class="card-block">
    <img class="card-image-show" src="<%= home.photos.first.image.url %>" height="100" width="100">
    <h4 class="card-title"><%= home.name %></h4>
    <p class="card-text"><%= home.description %></p>
    <%= link_to "Reserve Now", user_home_path(home.user.slug, home), class: "btn btn-primary" %>
  </div>
</div>
</div>
<% end %>
</div>
