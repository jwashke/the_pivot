<div class="container">
<div class="new-form">
<h1>Log in or Create an Account</h1>

<div class="login">
  <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= hidden_field_tag :user_action, "checkout" if @checkout %>
    <%= f.submit "Login" %>
  <% end %>
</div><br>


<%= link_to "Create Account", new_user_path %>
</div>
</div>
