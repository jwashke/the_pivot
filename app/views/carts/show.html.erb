<div class="container-fluid cart-box col-md-offset-3 col-md-6 rounded">
  <h2>Shopping Cart:</h2>

  <table class="table">
    <th>Home Name</th>
    <th>Checkin Date</th>
    <th>Checkout Date</th>
    <th>Total Days</th>
    <th>Price Per Night</th>
    <th>Subtotal</th>
    <% @contents.each do |reservation| %>
      <tr class="home-<%= reservation.id %>">
        <td><%= reservation.name %></td>
        <td><%= reservation.checkin %></td>
        <td><%= reservation.checkout %></td>
        <td><%= reservation.total_days %></td>
        <td><%= number_with_precision(reservation.price_per_night, precision: 2) %></td>
        <td><%= number_with_precision(reservation.total, precision: 2) %></td>
      </tr>
    <% end %>
  </table>

<div class="col-md-offset-1 col-md-9 cart-total">
  Total: <%= number_with_precision(@cart.total, precision: 2) %>
  <br>
    <% if current_user %>
      <div class="btn btn-one"><%= link_to "Checkout Now", orders_path, method: "post" %></div>
    <% else %>
      <div class="btn btn-one"><%= link_to "Login", login_path %></div> or
      <div class="btn btn-one"><%= link_to "Create Account to Checkout", new_user_path %></div>
    <% end %>
</div>
</div>
