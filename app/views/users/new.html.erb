<h1>New User Page</h1>

<div class="new-user">
  <%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
    <%= f.submit "Create Account" %>
  <% end %>
</div>
